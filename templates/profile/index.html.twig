{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h1>Mes topics</h1>
    <ul class="list-group">
        {% for topic in topics %}
            <li class="list-group-item">
                {{ topic.titre }} - {{ topic.createdAt ? topic.createdAt|date('Y-m-d H:i:s') : '' }} -
                 <a href="{{ path('topic_show', {'id': topic.id}) }}" class="btn btn-primary">Voir le topic</a> -
                 <a href="{{ path('topic_edit', {'id': topic.id }) }}" class="btn btn-warning">Modifier le topic</a>
                {{ include('topic/_delete_form.html.twig') }}
            </li>
        {% endfor %}
    </ul>
    <a href="{{ path('topic_new') }}" class="btn btn-success">Cr√©er un topic</a>
</div>
{% endblock %}
